<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintHereid"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cardview_timestamp_frag_circleImageViewiD"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline8"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.328" />


        <TextView
            android:id="@+id/cardview_timestamp_frag_textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="nama"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/cardview_timestamp_frag_textViewStatus"
            app:layout_constraintStart_toStartOf="@+id/cardview_timestamp_frag_textViewStatus"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.17" />

        <TextView
            android:id="@+id/cardview_timestamp_frag_textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="11dp"
            android:text="   Date    "
            app:layout_constraintEnd_toStartOf="@+id/cardview_timestamp_frag_textViewStatus"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cardview_timestamp_frag_circleImageViewiD"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintTop_toBottomOf="@+id/cardview_timestamp_frag_textViewName" />

        <TextView
            android:id="@+id/cardview_timestamp_frag_textViewDate_Input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="21 Feb"
            app:layout_constraintEnd_toEndOf="@+id/cardview_timestamp_frag_textViewDate"
            app:layout_constraintStart_toStartOf="@+id/cardview_timestamp_frag_textViewDate"
            app:layout_constraintTop_toBottomOf="@+id/cardview_timestamp_frag_textViewDate" />

        <TextView
            android:id="@+id/cardview_timestamp_frag_textViewStatus_Input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="On Time"
            app:layout_constraintEnd_toEndOf="@+id/cardview_timestamp_frag_textViewStatus"
            app:layout_constraintStart_toStartOf="@+id/cardview_timestamp_frag_textViewStatus"
            app:layout_constraintTop_toBottomOf="@+id/cardview_timestamp_frag_textViewStatus" />

        <TextView
            android:id="@+id/cardview_timestamp_frag_textViewTime_Input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="8.00AM"
            app:layout_constraintEnd_toEndOf="@+id/cardview_timestamp_frag_textViewTime"
            app:layout_constraintStart_toStartOf="@+id/cardview_timestamp_frag_textViewTime"
            app:layout_constraintTop_toBottomOf="@+id/cardview_timestamp_frag_textViewTime" />

        <TextView
            android:id="@+id/cardview_timestamp_frag_textViewStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="      Status      "
            app:layout_constraintEnd_toStartOf="@+id/cardview_timestamp_frag_textViewTime"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cardview_timestamp_frag_textViewDate"
            app:layout_constraintTop_toBottomOf="@+id/cardview_timestamp_frag_textViewName" />

        <TextView
            android:id="@+id/cardview_timestamp_frag_textViewTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="  Time   "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cardview_timestamp_frag_textViewStatus"
            app:layout_constraintTop_toBottomOf="@+id/cardview_timestamp_frag_textViewName" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.27" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.83" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>